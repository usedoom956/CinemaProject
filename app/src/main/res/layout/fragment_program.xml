<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.cinema.SecondPages.ProgramFragment">

    <TextView
        android:id="@+id/prog_main_text"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="О программе"
        android:textColor="@color/WhiteSmoke"
        android:textSize="24sp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prog_text1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Данная программа разрабатывалась в рамках курсовой работы."
        android:textColor="@color/WhiteSmoke"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prog_main_text" />

    <ImageView
        android:id="@+id/logo_for_info"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/icon2"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prog_text1"/>

    <TextView
        android:id="@+id/prog_text2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="В данной программе реализуется афиша кино, в которой можно выбрать кино и забронировать
место."
        android:textColor="@color/WhiteSmoke"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_for_info" />



</androidx.constraintlayout.widget.ConstraintLayout>
